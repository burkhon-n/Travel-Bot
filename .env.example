# Travel Bot Environment Variables
# Copy this file to .env and fill in your actual values

# Telegram Bot Configuration
BOT_TOKEN=your_bot_token_here
BOT_USERNAME=your_bot_username
URL=https://your-domain.vercel.app

# Admin User IDs (comma-separated Telegram user IDs)
ADMINS=123456789,987654321

# Google OAuth Configuration
CLIENT_ID=your_google_client_id.apps.googleusercontent.com
CLIENT_SECRET=your_google_client_secret
REDIRECT_URI=https://your-domain.vercel.app/auth/callback

# Database Configuration (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:port/database

# Email Configuration
EMAIL=your-email@example.com
EMAIL_PASSWORD=your_email_password_or_app_password

# SendGrid API Key (Recommended for production - many hosts block SMTP)
# Sign up: https://signup.sendgrid.com/ (100 free emails/day)
# Get key: https://app.sendgrid.com/settings/api_keys
# SENDGRID_API_KEY=SG.your_sendgrid_api_key_here

# Security Settings
# BYPASS_TELEGRAM_CHECK: Set to "true" for local development to bypass Telegram WebApp check
# Default: false (recommended for production)
BYPASS_TELEGRAM_CHECK=false

# STRICT_TELEGRAM_CHECK: Set to "false" to allow browser access to protected pages
# Default: true (recommended for production security)
STRICT_TELEGRAM_CHECK=true

# Development Settings
# Uncomment for local development
# BYPASS_TELEGRAM_CHECK=true
